{
    "manifest_version": 2,
  
    "name": "Codepad Extension",
    "description": "A notepad extension for quick coding in the browser",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}